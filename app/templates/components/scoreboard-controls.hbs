<div class="bg-grey border-2 border-grey-dark flex w-4/5 m-auto rounded p-4 shadow-md">

  <div class="w-1/3">
    <TeamControls @team="home" @scoreboard={{this.scoreboard}} />
  </div>

  <div class="w-1/3">
    <div class="text-center font-light">
      Timer
    </div>

    <div class="my-4"></div>

    <div class="flex justify-around">
      <ScoreboardValueChangeButton @changeValue={{action "changeValue" "secondsRemaining" "decrement"}} @fastStep=60 @fastWaitMs=500>
        -
      </ScoreboardValueChangeButton>
      <ScoreboardValueChangeButton @changeValue={{action "changeValue" "secondsRemaining" "increment"}} @fastStep=60 @fastWaitMs=500>
        +
      </ScoreboardValueChangeButton>
    </div>

    <div class="my-8"></div>

    <div class="flex justify-center">
      <ScoreboardValueChangeButton @changeValue={{action "changeValue" "period" "increment"}}>
        period
      </ScoreboardValueChangeButton>
    </div>

    <div class="my-8"></div>

    <div class="flex justify-around">
      <ScoreboardSwitchButton @toggle={{action "toggle" "isClockRunning"}}>
        clock
      </ScoreboardSwitchButton>
      <ScoreboardSwitchButton @toggle={{action "soundHorn"}}>
        horn
      </ScoreboardSwitchButton>
    </div>

  </div>
  <div class="w-1/3">
    <TeamControls @team="guests" @scoreboard={{this.scoreboard}} />

    <div class="my-8"></div>

    <div class="flex justify-center">
      <ControlsButton @onPush={{action "reset"}}>
        <span class="text-red-dark font-normal">
          reset
        </span>
      </ControlsButton>
    </div>

  </div>
</div>
